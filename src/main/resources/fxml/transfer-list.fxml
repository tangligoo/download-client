<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ztxa.client.ui.TransferListController"
            styleClass="transfer-container"
            prefHeight="500.0" prefWidth="900.0">
    
    <top>
        <!-- <Label text="文件传输列表" styleClass="transfer-title" BorderPane.alignment="CENTER"/> -->
    </top>
    
    <center>
        <TableView fx:id="taskTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="fileNameColumn" text="文件名" prefWidth="300" minWidth="200"/>
                <TableColumn fx:id="sizeColumn" text="大小" maxWidth="120" minWidth="80" prefWidth="100"/>
                <TableColumn fx:id="progressColumn" text="进度" maxWidth="300" minWidth="150" prefWidth="180"/>
                <TableColumn fx:id="speedColumn" text="速度" maxWidth="150" minWidth="100" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="状态" maxWidth="120" minWidth="80" prefWidth="100"/>
            </columns>
            <placeholder>
                <Label text="暂无下载任务"/>
            </placeholder>
        </TableView>
    </center>
    
</BorderPane>
